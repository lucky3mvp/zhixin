/* pages/test/test.wxss */
.page {
  min-height: 100vh;
  width: 100vw;
  background-color: #f9f8f7;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}
.info {
  background-color: #ffffff;
  padding: 30rpx 26rpx 40rpx;
  margin-bottom: 20rpx;
}
.banner-img {
  height: 288rpx;
  width: 100%;
  display: block;
  border-radius: 24rpx;
}
.title,
.category {
  padding: 0 14rpx;
}
.bottom {
  padding-right: 0;
  padding-left: 6rpx;
}
.title {
  font-size: 48rpx;
  line-height: 66rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, .8);
  margin-top: 40rpx;
}
.category {
  color: rgba(0, 0, 0, .8);
  margin-top: 14rpx;
  font-size: 24rpx;
  font-weight: 400;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.no {
  display: inline-block;
  width: 66rpx;
  height: 30rpx;
  background: #f7449c;
  background: linear-gradient(to bottom, rgba(252, 121, 203, 1), rgba(247, 68, 156, 1));
  color: #ffffff;
  font-size: 20rpx;
  margin-right: 10rpx;
  text-align: center;
  border-radius: 15rpx;
  font-weight: normal;
}
.dot {
  display: inline-block;
  margin: 0 8rpx;
}
.bottom {
  margin-top: 34rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.price {
  letter-spacing: -2rpx;
}
.orgPrice {
  font-size: 36rpx;
  color: rgba(0, 0, 0, .15);
  text-decoration: line-through;
}
.curPrice {
  color: #f7449c;
  display: inline-block;
  margin-right: 14rpx;
  font-size: 48rpx;
}
.btnContainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.btn {
  width: 214rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 33rpx;
  color: #ffffff;
  font-size: 26rpx;
  border: none;
}
.btn.orange {
  background-color: #ff9062;
  margin-left: 10rpx;
}
.btn.pink {
  background: #f7449c;
  background: linear-gradient(to right, #fc6493, #ec15ab);
}
.btn.only {
  width: 432rpx;
}
.warning {
  flex: 1;
  background-color: #ffffff;
  padding: 26rpx 34rpx 54rpx;
  color: rgba(0, 0, 0, .8);
}
.paragraph {
  font-weight: 300;
  font-size: 28rpx;
  line-height: 40rpx;
}
.border {
  border-top: 1rpx solid rgba(0, 0, 0, .03);
}
.heading {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 40rpx;
}
.heading-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}
.heading text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .8);
}