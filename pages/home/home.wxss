/* pages/home/home.wxss */
.page {
  height: 100vh;
  width: 100vw;
  background-color: #f9f8f7;
  font-size: 24rpx;
}
/* banner */
.swiper {
  width: 100vw;
  height: 400rpx;
  box-sizing: border-box;
  padding: 26rpx 24rpx;
  background: #ffffff;
}
swiper{
  height: 100%;
  overflow: hidden;
}
swiper, swiper-item {
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}
.swiper-header {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 26rpx;
}
.swiper-no {
  width: 66rpx;
  height: 30rpx;
  border-radius: 20rpx;
  background: #f7449c;
  background: linear-gradient(to bottom, rgba(252, 121, 203, 1), rgba(247, 68, 156, 1));
  text-align: center;
  color: #ffffff;
  vertical-align: middle;
  font-size: 20rpx;
  display: inline-block;
  margin-right: 14rpx;
}
.swiper-title {
  font-size: 30rpx;
  height: 30rpx;
  line-height: 1;
  color: #f7449c;
  display: inline-block;
  max-width: 520rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}
.swiper-indicator-container {
  vertical-align: middle;
  float: right;
}
.swiper-indicator {
  display: inline-block;
  height: 6rpx;
  width: 20rpx;
  margin-left: 12rpx;
  background: rgba(247, 68, 156, .3)
}
.swiper-indicator.active {
  background: rgba(247, 68, 156, 1)
}
.swiper-img {
  border-radius: 24rpx;
  display: block;
  width: 100%;
  height: 292rpx;
}
/* 热门推荐 */
.hot {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .8);
  background-color: #ffffff;
  padding-top: 30rpx;
  padding-left: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.hot-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}
/* 列表 */
.list {
  background-color: #ffffff;
}
.item {
  border-bottom: 1rpx solid rgba(0, 0, 0, .03);
  padding: 26rpx 24rpx;
}
.item-img {
  float: left;
  width: 196rpx;
  height: 176rpx !important;
  border-radius: 24rpx;
  margin-right: 24rpx;
  margin-top: 4rpx;
}
.item-body {
  /* img 宽 196rpx + 距离 26rpx */
  margin-left: 222rpx; 
  /* top: 128rpx + bottom 58rpx */
  height: 184rpx;
  line-height: 1;
}
.item-body-top {
  /* 
    高度组成：
    padding-top: 4rpx
    margin-bottom: 10rpx
    测试种类文案: 34rpx + margin-bottom: 10rpx = 44rpx
    测试标题：70rpx
    共计：128rpx
   */
  height: 114rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  padding-top: 4rpx;
}
.item-category {
  font-size: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin-bottom: 10rpx;
  color: rgba(0, 0, 0, .3);
}
.item-category-dot {
  display: inline-block;
  margin: 0 8rpx;
}
.item-title {
  color: rgba(0, 0, 0, .8);
  font-size: 28rpx;
  line-height: 35rpx;
  max-height: 70rpx;
}
.item-title text {
  display: -webkit-box;
  font-size: 28rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-body-bottom {
  height: 54rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.item-price {
  margin-bottom: 4rpx;
}
.orgPrice {
  color: rgba(0, 0, 0, .3);
  text-decoration: line-through;
}
.curPrice {
  color: #f7449c;
  margin-left: 10rpx;
}
.share-btn {
  /* 兼容不支持渐变的设备 */
  background: #f7449c;
  background: linear-gradient(to right, #fc6493, #ec15ab);
  width: 166rpx;
  height: 54rpx;
  line-height: 54rpx;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 28rpx;
  border: none;
  font-weight: 300;
}
/* 加载更多 */
.loading-status {
  text-align: center;
  font-size: 24rpx;
  line-height: 1;
  padding: 34rpx 0;
  color: rgba(0, 0, 0, .3);
}